<?xml version = "1.0"?>
<AppFrame id="root">
    <inner>
        <Container id="canvas-container"/>
    </inner>
    <horizontal>
        <ScrollView orientation="horizontal">
            <ListView orientation="horizontal" margin="10">
                <Toggle id="toggle-running" state="true">Play</Toggle>
                <Button id="random-button">Random Matrix</Button>
                <Button id="respawn-button">Respawn</Button>
                <Button id="random-and-respawn-button">Random Matrix &amp; Respawn</Button>
                <Button id="random-types-button">Random Types</Button>
                <Container id="matrix-container" width="40" height="40" />
                <Toggle id="toggle-replace-removed" state="false">Replace Removed</Toggle>
            </ListView>
        </ScrollView>
    </horizontal>
    <vertical>
        <ScrollView orientation="vertical">
            <ListView margin="4" orientation="vertical" align="start">
                <FloatSlider id="density-slider" min="0" max="0.03" digits="3">Density</FloatSlider>
                <Label>Settings</Label>
                <FloatSlider id="heat-slider" min="0" max="200">Heat</FloatSlider>
                <IntSlider id="types-slider" min="1" max="17" step="1">Types</IntSlider>
                <Selector id="initializer-selector" title="Matrix Initializer">random f,chains,random chains,equal pairs</Selector>
                <Selector id="spawn-selector" title="Spawn">Uniform,Centered,Sphere,Centered Sphere,Spiral</Selector>
                <FloatSlider id="friction-slider" min="0" max="60">Friction</FloatSlider>
                <Toggle id="dt-toggle" state="false">Use Fixed dt</Toggle>
                <FloatSlider id="dt-slider" min="1" max="100">Fixed dt (ms)</FloatSlider>
                <FloatSlider id="force-slider" min="0" max="1500">Force</FloatSlider>
                <FloatSlider id="rmin-slider" min="0" max="100">rMin</FloatSlider>
                <FloatSlider id="rmax-slider" min="10" max="100">rMax</FloatSlider>
            </ListView>
        </ScrollView>
    </vertical>
</AppFrame>